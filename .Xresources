! Disable the scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

! URxvt.font: xft:Consolas for Powerline:size=9:antialias=true,\
!             xft:FreeSerif:style=Regular

URxvt.font: xft:Source Code Pro for Powerline:size=9:antialias=true,\
            xft:FreeSerif:style=Regular

! URxvt.font: xft:DejaVu Sans Mono for Powerline:size=8:antialias=true,\
!             xft:FreeSerif:style=Regular

URxvt.letterSpace: -1
URxvt.perl-ext-common: selection-to-clipboard,resize-font

! Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #bbbbbb
!URxvt.cursorUnderline: true
! URxvt*fadeColor: #002b36

URxvt*background: #111111
URxvt*foreground: #55fb00


! Redefine some keybindings for resize-font
URxvt.keysym.C-plus: resize-font:reset
URxvt.keysym.C-equal: resize-font:bigger

! Disable default Ctrl+Shift keybinding
URxvt.iso14755: false
URxvt.iso14755_52: false


! ??????
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
